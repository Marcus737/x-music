<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".activity.PlayListDetailActivity"
        android:orientation="vertical"
        xmlns:android="http://schemas.android.com/apk/res/android">
    <com.xuexiang.xui.widget.actionbar.TitleBar
            android:id="@+id/pld_titleBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:tb_barHeight="65dp"
            app:tb_dividerColor="@color/xui_config_color_red"
            app:tb_sideTextPadding="20dp"
            app:tb_actionPadding="20dp"
            app:tb_titleText="歌单详情">
    </com.xuexiang.xui.widget.actionbar.TitleBar>
    <LinearLayout android:orientation="horizontal"
                  android:layout_width="match_parent"
                  android:layout_height="50dp">
        <com.xuexiang.xui.widget.button.ButtonView
                style="@style/ButtonView.Green"
                android:text="下载全部"
                android:id="@+id/fragment_down_btn"
                android:layout_width="100dp"
                android:layout_height="match_parent"/>
        <com.xuexiang.xui.widget.button.ButtonView
                style="@style/ButtonView.Green"
                android:text="播放全部"
                android:background="@color/xui_config_color_light_yellow"
                android:id="@+id/fragment_play_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/pld_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>


</LinearLayout>